
<table table table-striped table-hover>

	<caption> Título: <%= @article.title %> </caption>

	<tr>
		<th> Título: </th>
		<td>
			<small> <%= @article.title %> </small>
		</td>
	</tr>

	<tr>
		<th> Texto: </th>
		<td>
			<small> <%= @article.text %> </small>
		</td>
	</tr>

	<tr>
		<th> Creado el:  &nbsp;</th>
		<td>
			<small> <%= @article.created_at.strftime('%Y-%m-%d %H:%M:%S') %> </small>
		</td>
	</tr>

	<tr>
		<th> Actualizado el: &nbsp;</th>
		<td>
			<small> <%= @article.updated_at.strftime('%Y-%m-%d %H:%M:%S') %> </small>
		</td>
	</tr>

</table>


<h4>Comentarios</h4>
<% @article.comments.each do |comment| %>
<p>
	<strong>Título:</strong>
	<%= comment.commenter %>
</p>

<p>
	<strong>Comentario:</strong>
	<%= comment.body %>
</p>


<%= link_to [comment.article, comment], :class => 'btn btn-danger btn-xs' ,method: :delete, data: { confirm: 'Desea Eliminar?' } do %>
	<strong> Eliminar  </strong>
<% end %>

<% end %>

<h4>Agregar un comentario:</h4>

<%= form_for([@article, @article.comments.build]) do |f| %>
<p>
	<%= f.label :título %><br>
	<%= f.text_field :commenter %>
</p>
<p>
	<%= f.label :comentario %><br>
	<%= f.text_area :body %>
</p>
<p>
	<%= button_tag(type: 'submit', class: 'btn btn-default btn-xs') do %>
	<i class="icon-ok icon-white"></i> <strong> Guardar </strong>
	<% end %>
</p>
<% end %>


<%= link_to new_article_path, :class => 'btn btn-default btn-xs' do %>
<strong> Nuevo Articulo </strong>
<% end %>


<%= link_to edit_article_path(@article), :class => 'btn btn-warning btn-xs' do %>
<strong> Editar </strong>
<% end %>